{
    "files": [
        "src/*.ts",
        "src/model/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/midi.d.ts"
    ]
}
